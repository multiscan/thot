= simple_form_for([:adm, @label_layout]) do |f|
  = f.error_notification

  .form-inputs
    .row
      .span3
        = f.input :name, :input_html=>{:class => "span2"}
        %h4 Labels
        .row
          .span1= f.input :nc, label: 'Columns', :collection => 1..10, :default => 1, :input_html=>{:class => "span1"}
          .span1= f.input :hs, label: 'spacing', :default => 0, :input_html=>{:class => "span1"}
          .span1= f.input :hp, label: 'h-padding', :default => 2, :input_html=>{:class => "span1"}
        .row
          .span1= f.input :nr, label: 'Rows', :collection => 1..10, :default => 1, :input_html=>{:class => "span1"}
          .span1= f.input :vs, label: 'spacing', :default => 0, :input_html=>{:class => "span1"}
          .span1= f.input :vp, label: 'v-padding', :default => 2, :input_html=>{:class => "span1"}
      .span9
        = f.input :description, :input_html=>{:class => "span9"}
        %h4 Page
        .row
          .span3= f.input :page, :as => :select, :label => "Format", :collection => ["custom"] + LabelLayout::STANDARD_PAGE_SIZES.keys, :default => "custom"
          .span2.offset2= f.input :mt, label: 'Margin top', :input_html=>{:class => "span1"}
        .row
          .span2= f.input :pw, label: 'Page Width', :input_html=>{:class => "span1"}
          .span2.offset1= f.input :ml, label: 'Margin left', :input_html=>{:class => "span1"}
          .span2.offset2= f.input :mr, label: 'Margin right', :input_html=>{:class => "span1"}
        .row
          .span2= f.input :ph, label: 'Page Height', :input_html=>{:class => "span1"}
          .span2.offset3= f.input :mb, label: 'Margin bottom', :input_html=>{:class => "span1"}

  .form-actions
    = f.button :submit
