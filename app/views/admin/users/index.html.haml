-content_for(:title) do
  Listing Users

%table.table.sortable
  %thead
    %hr
      %th Id
      %th Name
      %th E-mail
      %th Lab
      %th N. of Loans
      %th Role
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td= user.lab_nick
        %td= user.loans.count
        %td= user.role
        %td= link_to 'Show', [:admin, user]
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_admin_user_path

-content_for :head do
  :javascript
    console.debug("tablesorter");
    jQuery(document).ready(function($) {
      $("table.sortable").tablesorter();
    });
