-content_for(:titlebar) do
  =@book.title

-content_for(:title) do
  =@book.title
  %br
  %small
    %strong By
    =@book.author
    %br
    - if @book.editor?
      %strong Edited by
      =@book.editor

.well
  .row
    .span6
      %dl.dl-horizontal
        %dt volume:
        %dd=@book.volume || "-"
        %dt edition:
        %dd=@book.edition || "-"
        %dt publication year:
        %dd=@book.pubyear || "-"
        %dt publisher:
        %dd=@book.publisher.nil? ? "-" : link_to(@book.publisher.name, @book.publisher)
        %dt Collection:
        %dd=@book.collection
    .span4
      %dl.dl-horizontal
        %dt ISBN:
        %dd=@book.isbn || "-"
        %dt Call Nr.
        %dd
          %span.label= @book.call1 || "-"
          %span.label= @book.call2 || "-"
          %span.label= @book.call3 || "-"
          %span.label= @book.call4 || "-"
        %dt Collation:
        %dd=@book.collation || "-"
        - if can? :manage, @book
          %dt
          %dd=link_to "Edit Book", edit_adm_book_path(@book)

%h4 This Copy
- if can? :manage, @item
  %p=link_to "Edit", edit_adm_item_path(@item)
%table.table
  %thead
    %th Inv. Number
    %th Owner
    %th Location
    %th Status
    %th User
    - if can? :manage, @item
      %th Price
  %tbody
    %tr
      %td=@item.inv
      %td
        =@item.lab.nick
        \-
        =@item.lab.name
      %td=item_location(@item)
      %td=item_status(@item)
      %td=@item.borrower_name
      - if can? :manage, @item
        %td= item_price(@item)

%h4 More Infos
.well
  .tabbable
    %ul.nav.nav-tabs
      %li.active
        %a{:href=>"#abstab", "data-toggle" => "tab"} Abstract
      %li
        %a{:href=>"#idxtab", "data-toggle" => "tab"} Index
      %li
        %a{:href=>"#nottab", "data-toggle" => "tab"} Notes
      %li
        %a{:href=>"#toctab", "data-toggle" => "tab"} TOC
  .tab-content
    .tab-pane.active{:id=>"abstab"}
      %h4 Abstract
      =long_text(@book.abstract)
    .tab-pane{:id=>"idxtab"}
      %h4 Index
      =@book.idx
    .tab-pane{:id=>"nottab"}
      %h4 Notes
      =@book.notes
    .tab-pane{:id=>"toctab"}
      %h4 Table of Content
      =@book.toc
