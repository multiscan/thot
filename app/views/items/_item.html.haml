-book=item.book
%li.well.bookli
  .row
    .span1
      %strong=link_to item.inv, item
      %br
      =item.lab.nick
      %br
      =item_status(item)
    .span7
      %span.author=book.author
      %br
      -#%span.label.label-info=book.title
      %span.booktitle=book.title
      -if book.volume?
        %strong vol.
        =book.volume
      -if book.edition?
        = book.edition
        edition
      %br
      - if book.editor && !book.editor.empty?
        %strong Edited by
        =book.editor
      %br
      %span.publisher
        =book.publisher_name
    .span3
      =book.isbn
      %br
      %span.label= book.call1 || "-"
      %span.label= book.call2 || "-"
      %span.label= book.call3 || "-"
      %span.label= book.call4 || "-"
      %br
      = item_location(item)
      -if can? :update, item
        %br
        =link_to "Edit", edit_adm_item_path(item)
      -else
        %br
