%li.well.bookli
  .row
    .span8
      %span.author=book.author
      %br
      -#%span.label.label-info=book.title
      %span.booktitle=book.title
      -if book.volume?
        %strong vol.
        =book.volume
      -if book.edition?
        = book.edition
        edition
      %br
      - if book.editor && !book.editor.empty?
        %strong Edited by
        =book.editor
      %br
      %span.publisher
        =book.publisher.name
    .span2
      =book.isbn
      %br
      =book.call1
      =book.call2
      =book.call3
      =book.call4
      -if can? :update, book
        %br
        =link_to "Edit", edit_book_path(book)
        |
        =link_to "Add Item", new_book_item_path(book)
      -else
        %br
        %br
      %br
      =link_to 'more Â»', book
    .span1
      %span.label.label-warning taken
      %span.label.label-success available
